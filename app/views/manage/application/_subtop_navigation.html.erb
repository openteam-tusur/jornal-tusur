<div class='container-fluid subtop-header'>
  <div class='container'>
    <div class='header'>
      <div class='row'>
        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>

          <% cache_unless request.host.match(Settings['app.nocache_host'].to_s),
                          "#{request.fullpath.to_s.parameterize('_').gsub('-', '_')}_subtop_navigation",
                          expires_in: 20.minutes do %>
            <div class='logotype'>

              <div class='image-wrapper'>
                <%= link_to I18n.locale == :ru ? '/' : "/#{I18n.locale}", :class => 'image' do %>
                  <%= image_tag 'logotype.png', class: 'img-responsive' %>
                <% end %>
              </div>

              <div class='site-name-wrapper hidden-xs hidden-sm'>
                <%= link_to I18n.t('app.title'), I18n.locale == :ru ? '/' : "/#{I18n.locale}", :class => 'site-name' %>
              </div>

              <button class='navbar-toggle collapsed' type='button' data-toggle='collapse' data-target='#main-navbar' aria-controls='main-navbar' aria-expanded='false'>
                <span class='sr-only'>Toggle navigation</span>
                <span class='icon-bar'></span>
                <span class='icon-bar'></span>
                <span class='icon-bar'></span>
              </button>

            </div>
          <% end %>

        </div>

      </div>
    </div>
  </div>
</div>
